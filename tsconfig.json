{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "test/**/*.ts",
    "scrum-tools-backend/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scrum-tools-ui"
  ]
}
